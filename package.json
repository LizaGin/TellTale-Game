{
  "name": "lizagin-task-2018",
  "version": "1.0.0",
  "description": "talltail",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "build": "npm-run-all --parallel build:*",
    "build:ts": "tsc",
    "build:next": "next build",
    "ci:heroku:build": "docker build --rm=false -t registry.heroku.com/$npm_package_name/web .",
    "ci:heroku:login": "docker login -u $HEROKU_LOGIN -p $HEROKU_TOKEN registry.heroku.com",
    "ci:heroku:push": "docker push registry.heroku.com/$npm_package_name/web:latest",
    "ci:heroku:release": "./scripts/release.sh $npm_package_name",
    "ci:surge": "surge -p ./dist/client -d $npm_package_name.surge.sh",
    "deps:all": "npm ci",
    "deps:production": "npm ci --production",
    "docker:build": "docker build -t $npm_package_name .",
    "docker:run": "docker run -p 8080:80 $npm_package_name",
    "heroku:login": "heroku container:login",
    "heroku:push": "heroku container:push web",
    "heroku:release": "heroku container:release web",
    "heroku:open": "heroku open",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint --fix src/**/*.css",
    "lint:deps": "npm audit",
    "lint:es": "eslint --fix --ext=.ts,.tsx,.js src/ config/ pages/ components/",
    "start": "cross-env NODE_PATH=dist/src node dist/src",
    "surge": "surge -p ./dist/client -d $npm_package_name.surge.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/honest-hrundel/LizaGin-task-2018.git"
  },
  "keywords": [
    "talltail"
  ],
  "author": "ligin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/honest-hrundel/LizaGin-task-2018/issues"
  },
  "homepage": "https://github.com/honest-hrundel/LizaGin-task-2018#readme",
  "dependencies": {
    "@babel/plugin-proposal-decorators": "7.4.4",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "body-parser": "1.19.0",
    "config": "3.0.1",
    "cross-env": "5.2.0",
    "express": "4.16.4",
    "isomorphic-fetch": "2.2.1",
    "morgan": "1.9.1",
    "next": "8.1.0",
    "pg": "7.9.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "reflect-metadata": "0.1.13",
    "save": "^2.4.0",
    "sequelize": "5.7.3",
    "sequelize-typescript": "1.0.0-alpha.9"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.26",
    "@types/config": "0.0.34",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/morgan": "1.7.35",
    "@types/next": "8.0.5",
    "@types/node": "^11.13.4",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/sequelize": "^4.27.46",
    "@types/validator": "10.11.0",
