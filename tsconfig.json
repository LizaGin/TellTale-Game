{
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "dist/",
  
      "baseUrl": "./src/",
  
      "target": "es2018",
      "lib": ["dom", "es2018"],
      "module": "commonjs",
      "resolveJsonModule": true,
      "sourceMap": true,
  
      "esModuleInterop": true,
  
      "strict": true,
  
      "noUnusedLocals": true,
      "noUnusedParameters": true,

      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,

      "strictPropertyInitialization": false,
      
      "jsx": "react",

      "typeRoots": [
        "./@types"
      ]
    }
  }